      "source": [
        "import pandas as pd\n",
        "import numpy as np\n",
        "from google.colab import auth\n",
        "import gspread\n",
        "from google.auth import default\n",
        "from gspread_dataframe import set_with_dataframe\n",
        "\n",
        "# 1. 인증 및 시트 연결\n",
        "auth.authenticate_user()\n",
        "creds, _ = default()\n",
        "gc = gspread.authorize(creds)\n",
        "\n",
        "# --- [수정 필수] 여기에 새로 만드신 구글 시트 ID를 넣으세요 ---\n",
        "FILE_ID = '1L_goQ0fA2SKoRNKmqbDSbstFdlc_3mX2yxY3CRt7Vc0'\n",
        "sh = gc.open_by_key(FILE_ID)\n",
        "raw_ws = sh.worksheet(\"데이터\") # 탭 이름이 '데이터'여야 합니다.\n",
        "data = raw_ws.get_all_values()\n",
        "\n",
        "# 2. 데이터 처리\n",
        "df = pd.DataFrame(data[1:], columns=data[0])\n",
        "df['입사일'] = pd.to_datetime(df['입사일'].str.strip(), errors='coerce')\n",
        "df['퇴사일'] = pd.to_datetime(df['퇴사일'].str.strip(), errors='coerce')\n",
        "df = df.dropna(subset=['입사일'])\n",
        "\n",
        "# 3. 분석 로직 (연도별/재직기간별 통계)\n",
        "def analyze_turnover(ref_date_str):\n",
        "    ref_date = pd.to_datetime(ref_date_str)\n",
        "    year = ref_date.year\n",
        "\n",
        "    # 기준일 시점 재직자: 기준일 이전 입사자 중 (미퇴사자 혹은 기준일 이후 퇴사자)\n",
        "    active_mask = (df['입사일'] <= ref_date) & ((df['퇴사일'].isnull()) | (df['퇴사일'] >= pd.to_datetime(f\"{year}-01-01\")))\n",
        "    current_df = df[active_mask].copy()\n",
        "\n",
        "    if current_df.empty: return pd.Series(dtype='float64')\n",
        "\n",
        "    def get_tenure_group(row):\n",
        "        # 기준일 당시의 근속 연수 계산\n",
        "        calc_end = row['퇴사일'] if (pd.notnull(row['퇴사일']) and row['퇴사일'] <= ref_date) else ref_date\n",
        "        years = (calc_end - row['입사일']).days / 365.25\n",
        "        if years < 1: return \"1. 1년 미만\"\n",
        "        elif 1 <= years < 2: return \"2. 1~2년\"\n",
        "        elif 2 <= years < 3: return \"3. 2~3년\"\n",
        "        elif 3 <= years < 5: return \"4. 3~5년\"\n",
        "        else: return \"5. 5년 이상\"\n",
        "\n",
        "    current_df['그룹'] = current_df.apply(get_tenure_group, axis=1)\n",
        "    current_df['당해퇴사'] = current_df['퇴사일'].apply(lambda x: 1 if (pd.notnull(x) and x.year == year) else 0)\n",
        "\n",
        "    summary = current_df.groupby('그룹').agg(퇴사자=('당해퇴사', 'sum'), 전체=('그룹', 'count'))\n",
        "    return (summary['퇴사자'] / summary['전체'] * 100).round(1)\n",
        "\n",
        "# 4. 연도별 실행 및 결과 통합\n",
        "years = ['2021-12-31', '2022-12-31', '2023-12-31', '2024-12-31', '2025-12-31']\n",
        "report_df = pd.DataFrame()\n",
        "for y in years:\n",
        "    report_df[y[:4]] = analyze_turnover(y)\n",
        "\n",
        "report_df = report_df.fillna(0).reset_index()\n",
        "\n",
        "# 5. 상관계수 계산 (1년 미만 그룹)\n",
        "years_num = np.array([2021, 2022, 2023, 2024, 2025])\n",
        "rates_1y = report_df.iloc[0, 1:].values.astype(float)\n",
        "corr = np.corrcoef(years_num, rates_1y)[0, 1]\n",
        "\n",
        "# 6. 시트 전송\n",
        "try:\n",
        "    db_ws = sh.add_worksheet(title=\"분석_결과\", rows=\"100\", cols=\"20\")\n",
        "except:\n",
        "    db_ws = sh.worksheet(\"분석_결과\")\n",
        "\n",
        "db_ws.clear()\n",
        "db_ws.update('A1', [['[노머스 이직 통계 리포트]']])\n",
        "set_with_dataframe(db_ws, report_df, row=3, col=1)\n",
        "db_ws.update('A10', [['시간 흐름과 1년 미만 퇴사율 상관계수', round(corr, 4)]])\n",
        "\n",
        "print(\"✅ 분석이 완료되었습니다! '분석_결과' 시트를 확인하세요.\")\n",
        "\n",
        "import pandas as pd\n",
        "\n",
        "# 1. 퇴사자만 필터링 (퇴사일이 있는 사람)\n",
        "resigned_df = df[df['퇴사일'].notnull()].copy()\n",
        "\n",
        "# 2. 재직 기간(개월) 계산\n",
        "# .dt.days는 날짜 차이를 일수로 바꿉니다. 이를 30.44(한달 평균 일수)로 나눕니다.\n",
        "resigned_df['재직개월수'] = (resigned_df['퇴사일'] - resigned_df['입사일']).dt.days / 30.44\n",
        "\n",
        "# 3. 입사 연도 추출\n",
        "resigned_df['입사연도'] = resigned_df['입사일'].dt.year\n",
        "\n",
        "# 4. 집계 (오류 방지를 위해 '입사일' 컬럼으로 개수를 셉니다)\n",
        "tenure_analysis = resigned_df.groupby('입사연도').agg(\n",
        "    퇴사자수=('입사일', 'count'),  # '이름/ID' 대신 확실히 존재하는 '입사일' 사용\n",
        "    평균재직개월=('재직개월수', 'mean'),\n",
        "    최단재직개월=('재직개월수', 'min'),\n",
        "    최장재직개월=('재직개월수', 'max')\n",
        ").round(1)\n",
        "\n",
        "# 5. 보기 좋게 정렬\n",
        "tenure_analysis = tenure_analysis.sort_index()\n",
        "\n",
        "print(\"--- [검증 완료] 연도별 입사자의 퇴사 시점 분석 ---\")\n",
        "print(tenure_analysis)\n",
        "\n",
        "# 1. 퇴사자 데이터 추출 및 계산 (이전 로직 동일)\n",
        "resigned_df = df[df['퇴사일'].notnull()].copy()\n",
        "resigned_df['재직개월수'] = (resigned_df['퇴사일'] - resigned_df['입사일']).dt.days / 30.44\n",
        "resigned_df['입사연도'] = resigned_df['입사일'].dt.year\n",
        "\n",
        "# 2. 통계 집계\n",
        "tenure_analysis = resigned_df.groupby('입사연도').agg(\n",
        "    퇴사자수=('입사일', 'count'),\n",
        "    평균재직개월=('재직개월수', 'mean'),\n",
        "    최단재직개월=('재직개월수', 'min'),\n",
        "    최장재직개월=('재직개월수', 'max')\n",
        ").round(1).reset_index()\n",
        "\n",
        "# 3. 스프레드시트에 [생존분석] 시트 생성 및 데이터 쓰기\n",
        "try:\n",
        "    # 이미 시트가 있으면 가져오고, 없으면 새로 만듭니다.\n",
        "    survival_ws = sh.add_worksheet(title=\"생존분석\", rows=\"100\", cols=\"20\")\n",
        "except:\n",
        "    survival_ws = sh.worksheet(\"생존분석\")\n",
        "\n",
        "# 시트 내용 초기화 후 데이터프레임 전송\n",
        "survival_ws.clear()\n",
        "survival_ws.update('A1', [['[연도별 입사자 평균 재직 기간 분석 리포트]']])\n",
        "set_with_dataframe(survival_ws, tenure_analysis, row=3, col=1)\n",
        "\n",
        "# 추가 인사이트 텍스트 입력 (선택 사항)\n",
        "survival_ws.update('A12', [['※ 해석 가이드: 평균 재직개월이 짧을수록 해당 연도 입사자의 초기 이탈이 심했음을 의미합니다.']])\n",
        "\n",
        "print(\"✅ '생존분석' 시트 생성이 완료되었습니다! 스프레드시트를 확인해 보세요.\")"
      ]
    }
  ]
